{
    "manifest_version": 2,
    "name": "Firemacs Quantum",
    "version": "",

    "browser_action": {
        "default_icon": "assets/icon32.png"
    },

    "permissions": [
        "activeTab",
        "clipboardRead",
        "clipboardWrite",
        "tabs",
        "storage"
    ],

    "background": {
        "scripts": [
            "js/background.js"
        ]
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "match_about_blank": true,
        "js": ["js/content.js"]
    }]
}
